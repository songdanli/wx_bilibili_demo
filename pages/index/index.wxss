page{
  color:#666;
  padding: 5rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* 首页导航 */
.nav_wrap{}
.nav{
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item{
  padding:20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block; 
}
.nav_item.active{
  border-bottom: 5rpx solid #f45a8d;
}

/* 轮播图 */
.slides{
  margin-top:10rpx;
  padding:0 5rpx;
}
.slides swiper{
  height: 220rpx;
}
.slides navigator{
  width: 100%;
  height: 100%;
}
.slides image{
  width: 100%;
  height: 100%;
}

/* 视频列表 */
.video_wrap{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
  justify-content: space-between;
}
.video_item{
  width: 48%;
  margin-bottom: 20rpx;
}
.video_img{
  position: relative;
}
.video_img image{
  width: 100%;
  border-radius: 15rpx;
}
.video_img .video_info{
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.video_title{
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}